    <!-- compat ë°©ì‹ ìŠ¤í¬ë¦½íŠ¸: ì‹¤ì œ ë™ì‘ ë¡œì§ ì „ì²´ -->
    <script>
        // Firebase ì´ˆê¸°í™” (compat)
        let database;
        let answersRef;
        let draggedElement = null;
        let offsetX = 0;
        let offsetY = 0;

        try {
            firebase.initializeApp(window.firebaseConfig);
            database = firebase.database();
            answersRef = database.ref('answers');

            // ì—°ê²° ìƒíƒœ í™•ì¸
            const connectedRef = database.ref('.info/connected');
            connectedRef.on('value', (snap) => {
                const status = document.getElementById('status');
                if (snap.val() === true) {
                    status.textContent = 'âœ… ì‹¤ì‹œê°„ ì—°ê²°ë¨';
                    status.className = 'status connected';
                } else {
                    status.textContent = 'âŒ ì—°ê²° ëŠê¹€';
                    status.className = 'status';
                }
            });

            // ì‹¤ì‹œê°„ ë°ì´í„° ë¦¬ìŠ¤ë„ˆ
            answersRef.on('value', (snapshot) => {
                loadAnswers(snapshot);
            });

        } catch (error) {
            console.error('Firebase ì´ˆê¸°í™” ì˜¤ë¥˜:', error);
            document.getElementById('status').textContent = 'âŒ Firebase ì˜¤ë¥˜';
        }

        function loadAnswers(snapshot) {
            const board = document.getElementById('board');
            const emptyState = document.getElementById('emptyState');
            
            // ê¸°ì¡´ í¬ìŠ¤íŠ¸ì‡ ì œê±°
            board.querySelectorAll('.sticky-note').forEach(note => note.remove());

            const answers = [];
            snapshot.forEach((childSnapshot) => {
                answers.push({
                    id: childSnapshot.key,
                    ...childSnapshot.val()
                });
            });

            if (answers.length === 0) {
                emptyState.style.display = 'block';
            } else {
                emptyState.style.display = 'none';
                answers.forEach((answer, index) => {
                    createStickyNote(answer, index);
                });
            }

            document.getElementById('answerCount').textContent = `ë‹µë³€: ${answers.length}ê°œ`;
        }

        function createStickyNote(answer, index) {
            const board = document.getElementById('board');
            const note = document.createElement('div');
            note.className = 'sticky-note';
            note.dataset.id = answer.id;
            
            // ì €ì¥ëœ ìœ„ì¹˜ê°€ ìˆìœ¼ë©´ ì‚¬ìš©, ì—†ìœ¼ë©´ ëœë¤ ë°°ì¹˜
            if (answer.position && typeof answer.position.x === 'number' && typeof answer.position.y === 'number') {
                note.style.left = answer.position.x + 'px';
                note.style.top = answer.position.y + 'px';
            } else {
                const maxX = Math.max(board.clientWidth - 220, 10);
                const maxY = Math.max(board.clientHeight - 170, 10);
                const x = Math.random() * maxX;
                const y = (index * 180) % maxY;
                note.style.left = x + 'px';
                note.style.top = y + 'px';
            }

            const date = new Date(answer.timestamp || Date.now());
            const formattedDate = `${date.getMonth() + 1}/${date.getDate()} ${date.getHours()}:${String(date.getMinutes()).padStart(2, '0')}`;

            note.innerHTML = `
                <button class="delete-btn" onclick="deleteNote('${answer.id}')">Ã—</button>
                <div class="text">${escapeHtml(answer.text || '')}</div>
                <div class="timestamp">${formattedDate}</div>
            `;

            // ë“œë˜ê·¸ ì´ë²¤íŠ¸
            note.addEventListener('mousedown', startDrag);
            note.addEventListener('touchstart', startDrag, { passive: false });
            
            board.appendChild(note);
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function startDrag(e) {
            if (e.target && e.target.classList && e.target.classList.contains('delete-btn')) return;
            
            e.preventDefault();
            draggedElement = e.currentTarget;
            draggedElement.classList.add('dragging');
            
            let clientX, clientY;
            if (e.type === 'touchstart') {
                clientX = e.touches[0].clientX;
                clientY = e.touches[0].clientY;
            } else {
                clientX = e.clientX;
                clientY = e.clientY;
            }
            
            const rect = draggedElement.getBoundingClientRect();
            offsetX = clientX - rect.left;
            offsetY = clientY - rect.top;

            document.addEventListener('mousemove', drag);
            document.addEventListener('mouseup', stopDrag);
            document.addEventListener('touchmove', drag, { passive: false });
            document.addEventListener('touchend', stopDrag);
        }

        function drag(e) {
            if (!draggedElement) return;
            e.preventDefault();
            
            let clientX, clientY;
            if (e.type === 'touchmove') {
                clientX = e.touches[0].clientX;
                clientY = e.touches[0].clientY;
            } else {
                clientX = e.clientX;
                clientY = e.clientY;
            }
            
            const board = document.getElementById('board');
            const boardRect = board.getBoundingClientRect();
            
            let x = clientX - boardRect.left - offsetX;
            let y = clientY - boardRect.top - offsetY;
            
            // ë³´ë“œ ê²½ê³„ ì œí•œ
            x = Math.max(0, Math.min(x, board.clientWidth - draggedElement.offsetWidth));
            y = Math.max(0, Math.min(y, board.clientHeight - draggedElement.offsetHeight));
            
            draggedElement.style.left = x + 'px';
            draggedElement.style.top = y + 'px';
        }

        function stopDrag() {
            if (!draggedElement) return;
            
            draggedElement.classList.remove('dragging');
            
            // Firebaseì— ìœ„ì¹˜ ì €ì¥
            const id = draggedElement.dataset.id;
            const position = {
                x: parseInt(draggedElement.style.left) || 0,
                y: parseInt(draggedElement.style.top) || 0
            };
            
            if (answersRef && id) {
                answersRef.child(id).update({ position });
            }
            
            draggedElement = null;
            document.removeEventListener('mousemove', drag);
            document.removeEventListener('mouseup', stopDrag);
            document.removeEventListener('touchmove', drag);
            document.removeEventListener('touchend', stopDrag);
        }

        function deleteNote(id) {
            if (!confirm('ì´ ë‹µë³€ì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) return;
            if (answersRef && id) answersRef.child(id).remove();
        }

        function clearAll() {
            if (!confirm('ëª¨ë“  ë‹µë³€ì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) return;
            if (answersRef) answersRef.remove();
        }
    </script>
