    </div>

    <div class="board" id="board">
        <div class="empty-state" id="emptyState">ì•„ì§ ë‹µë³€ì´ ì—†ìŠµë‹ˆë‹¤ ğŸ“</div>
    </div>

    <!-- compat SDK (ì •ì ) -->
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-database-compat.js"></script>

    <!-- module SDK: configë¥¼ ì „ì—­ì— ë‘  -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/12.6.0/firebase-app.js";

        window.firebaseConfig = {
            apiKey: "AIzaSyBZHEvatAyEQHY98SW9ldX00YKASVPMkkY",
            authDomain: "contact-page-4a4da.firebaseapp.com",
            databaseURL: "https://contact-page-4a4da-default-rtdb.asia-southeast1.firebasedatabase.app",
            projectId: "contact-page-4a4da",
            storageBucket: "contact-page-4a4da.firebasestorage.app",
            messagingSenderId: "273523225898",
            appId: "1:273523225898:web:91c66954f0deb1734a5a53"
        };

        // module ì´ˆê¸°í™”ëŠ” ì„ íƒì (compatì—ì„œë„ ì´ˆê¸°í™” ê°€ëŠ¥í•˜ë„ë¡ ì „ì—­ configë§Œ ë‘ )
